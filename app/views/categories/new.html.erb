<%= render "shared/errors", obj: @category %>

<h1 align= "center">Create a Category</h1>
<div class= "row">
    <div class = "col-sm-12">
        <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class= "form-group">
                <div class= "control-label col-sm-2">
                    <%= f.label :name %>
                </div>
                <div class= "col-sm-8">
                    <%= f.text_field :name, class: "form-control", placeholder: "Enter name of the category", autofocus: true %>
                </div>
            </div>
            <div class= "form-group">
                <div class= "col-sm-10 col-sm-offset-2">
                    <%= f.submit "Create", class: "btn btn-primary btn-lg" %>
                </div>
            </div>
        <% end %>
    </div>
</div>
