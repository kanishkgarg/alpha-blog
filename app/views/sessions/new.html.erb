<h1 align = "center">Login</h4>

<%= form_for(:session, :html => { class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
            <div class= "form-group">
                <div class= "control-label col-sm-2">
                    <%= f.label :email %>
                </div>    
                <div class= "col-sm-8">
                    <%= f.email_field :email, class: "form-control", placeholder: "Enter Your Email address" %>
                </div>
            </div>
            <div class= "form-group">
                <div class= "control-label col-sm-2">
                    <%= f.label :password %>
                </div>    
                <div class= "col-sm-8">
                    <%= f.password_field :password, class: "form-control", autocomplete: "no" %>
                </div>
            </div>
            <div class= "form-group">
                <div class= "col-sm-10 col-sm-offset-2">
                    <%= f.submit "login", class: "btn btn-primary btn-lg" %>
                </div>
            </div>
    
        <% end %>

        <div class= "col-sm-4 col-sm-offset-4">
            <%= link_to "Cancel request and return to articles", articles_path %>
        </div>