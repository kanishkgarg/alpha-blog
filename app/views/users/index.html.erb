<div class = "rows center">
    <h3>Users</h3>
    <div class = "col-sm-4 col-sm-offset-4">
        <%= will_paginate @user %>
        <% @user.each do |user| %>
            <div class = "well well-lg">
                <div class = "listing">
                    <li><%= link_to (gravatar_for user), user_path(user)%></li>
                    <li><%= link_to user.username, user_path(user) %></li>
                    <li><%= link_to pluralize( user.articles.count, "Article"), user_path(user) %></li>
                    <% if current_user.admin? %>
                        <li><%= link_to "Delete User", user_path(user), method: :delete,
                                data: { confirm: "Are you sure you want to delete the user and all their articles" } %></li>
                    <% end %>
                </div>
            </div>
        <% end %>
        <%= will_paginate @user %>
    </div>
    
</div>